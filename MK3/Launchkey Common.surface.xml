		<!-- ******************************************************************************************** -->
		<!-- PAD SECTION   (2 x 8) DRUM ONLY for now -->
		<!-- ******************************************************************************************** -->

		<PadSection name="PadSectionElement" rows="2" roles="musicinput">
			<foreach variable="$i" count="16">
				<Pad control="pad[$i]">
					<Value control="padLEDState[$i]" param="state"/>
					<PlainValue control="padLEDAnimation[$i]" param="animation"/>
					<ColorIndex table="DAWModeColors" control="padLEDColor[$i]" param="color"/>
				</Pad>
			</foreach>
		</PadSection> 

		<!-- ******************************************************************************************** -->
		<!-- GLOBAL MAPPING -->
		<!-- ******************************************************************************************** -->

		<Global>
		
