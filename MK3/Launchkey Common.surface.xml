			<PlainValue control="layoutReceiver" param="layoutchange"/>
			<Invoke control="layoutReceiver" onReceive="onLayoutReceived"/>
			<Invoke control="layoutchange" onChanged="onLayoutChanged"/>

			<!-- <Invoke control="layoutReceiver" onReceive="onLayoutChanged"/>  MAY not need-->
			
			
			<Invoke control="scene" onReceive="onScenePressed" />

